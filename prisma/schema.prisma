model Post {
  id          Int       @default(autoincrement()) @id
  title       String    @db.VarChar(255)
  description String?   @db.VarChar(255)
  email       String    @db.VarChar(255)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
}